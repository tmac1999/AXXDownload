  <depends>com.intellij.modules.lang</depends>


  <actions>

    <action id="AXXDownload" class="com.aixuexi.plugin.AXXDownload" text="AXXDownload" description="AXXDownload">
      <add-to-group group-id="HelpMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>